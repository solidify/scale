          {
            "id": "pi-objective-actual-value",
            "name": "Scale_PIObjective_ActualValue",
            "description": "Actual business value.",
            "type": "Integer"
          },
          {
            "id": "pi-objective-team",
            "name": "Scale_PIObjective_Team",
            "description": "Name of team owning this objective (optional).",
