            "category": "Completed",
            "state": "Resolved",
            "color": "339933"
          },
          {
            "name": "Owned",
            "category": "In Progress",
            "state": "Owned",
            "color": "007acc"
          },
          {
            "name": "Accepted",
            "category": "In Progress",
            "state": "Accepted",
            "color": "007acc"
          },
          {
            "name": "Mitigated",
            "category": "In Progress",
            "state": "Mitigated",
            "color": "007acc"
          },
          {
            "name": "Removed",
            "category": "Removed",
            "state": "Removed",
            "color": "ffffff"
          }
        ]
